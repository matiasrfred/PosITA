<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PosApp"
        tools:targetApi="31">

        <!-- LOGIN: Activity inicial -->
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true"
            android:screenOrientation="landscape"
            android:keepScreenOn="true"
            android:theme="@style/Theme.PosApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MAIN: Pantalla principal -->
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="false"
            android:launchMode="singleTask"
            android:screenOrientation="landscape"
            android:keepScreenOn="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.PosApp" />

        <activity
            android:name=".ui.settings.SettingsActivity"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".ui.settings.company.CompanyConfigActivity"
            android:screenOrientation="landscape" />

        <activity
            android:name=".ui.settings.users.UserManagementActivity"
            android:screenOrientation="landscape" />

        <activity
            android:name=".ui.settings.products.ProductManagementActivity"
            android:screenOrientation="landscape" />

        <activity
            android:name=".ui.settings.products.DepartmentActivity"
            android:screenOrientation="landscape" />

        <activity
            android:name=".ui.settings.products.CategoryActivity"
            android:screenOrientation="landscape" />

        <activity
            android:name=".ui.settings.products.SubcategoryActivity"
            android:screenOrientation="landscape" />

        <activity
            android:name=".ui.settings.products.ProductActivity"
            android:screenOrientation="landscape" />


    </application>

</manifest>
