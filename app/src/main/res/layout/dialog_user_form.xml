<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="22dp"
    app:cardElevation="16dp"
    app:strokeColor="#E1E1E1"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Título -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvDialogTitle"
                android:text="@string/nuevo_usuario"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#1F1F1F"
                android:fontFamily="sans-serif-medium"/>

            <View
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:layout_marginTop="6dp"
                android:background="#FF6300"/>
        </LinearLayout>

        <!-- Nombre -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/nombre"
            app:boxStrokeColor="#FF6300"
            app:hintTextColor="@color/black"
            android:layout_marginTop="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Apellido -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/apellido"
            app:boxStrokeColor="#FF6300"
            app:hintTextColor="@color/black"
            android:layout_marginTop="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Usuario -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/usuario"
            android:layout_marginTop="12dp"
            app:boxStrokeColor="#FF6300"
            app:hintTextColor="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Contraseña -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/contrase_a"
            app:endIconMode="password_toggle"
            app:boxStrokeColor="#FF6300"
            android:layout_marginTop="12dp"
            app:hintTextColor="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPassword"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Rol -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/rol"
            app:boxStrokeColor="#FF6300"
            app:hintTextColor="@color/black"
            android:layout_marginTop="12dp"
            app:endIconMode="dropdown_menu"
            app:endIconTint="#FF6300">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/spRole"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="56dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:inputType="none"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:cursorVisible="false"
                android:popupBackground="@color/white"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Switch -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp"
            android:background="#E5E5E5"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/swActive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/usuario_activo"
            android:checked="true"
            android:textColor="#4A4A4A"
            android:paddingBottom="16dp"
            app:trackTint="@color/switch_track_color"
            app:thumbTint="@color/switch_thumb_color"/>

        <!-- Botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancelar"
                android:textColor="#FF6300"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:backgroundTint="@android:color/transparent"
                style="@style/Widget.MaterialComponents.Button.TextButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/guardar"
                android:layout_marginStart="12dp"
                android:textColor="@android:color/white"
                app:cornerRadius="18dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:backgroundTint="#FF6300"
                style="@style/Widget.MaterialComponents.Button"/>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
